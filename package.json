{
  "name": "@freeman29/starwars-names",
  "version": "0.0.0-semantically-released",
  "description": "Get a random Star Wars name.",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
	"test": "mocha src/*.test.js -w",
    "test:once": "istanbul cover -x *.test.js _mocha -- -R spec src/*.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/freeman29/starwars-names.git"
  },
  "keywords": [
    "random",
    "star",
    "wars"
  ],
  "author": "Francis Torda <tordafrancis@gmail.com> (https://github.com/freeman29)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/freeman29/starwars-names/issues"
  },
  "homepage": "https://github.com/freeman29/starwars-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "semantic-release": "^6.3.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test:once && npm run check-coverage"
    }
  }
}
